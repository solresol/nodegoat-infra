# NodeGoat Docker Environment Configuration
# Copy this file to .env and customize the values

# ===================
# Web Server Settings
# ===================
NODEGOAT_HTTP_PORT=8080
NODEGOAT_HTTPS_PORT=8443
NODEGOAT_DOMAIN=localhost
NODEGOAT_CMS_DOMAIN=cms.localhost

# ===================
# Database Settings
# ===================
# Database type: mysql or pgsql
DB_TYPE=mysql

# Database connection
DB_HOST=db
DB_PORT=3306
DB_EXTERNAL_PORT=3306

# Database names
DB_NAME_1100CC=1100CC
DB_NAME_CMS=nodegoat_cms
DB_NAME_HOME=nodegoat_home
DB_NAME_CONTENT=nodegoat_content
DB_NAME_TEMP=nodegoat_temp

# Database users
DB_USER_CMS=1100CC_cms
DB_USER_HOME=1100CC_home

# ===================
# Database Passwords
# ===================
# IMPORTANT: Change these in production!
MYSQL_ROOT_PASSWORD=rootpassword
DB_PASSWORD_CMS=changeme_cms
DB_PASSWORD_HOME=changeme_home
